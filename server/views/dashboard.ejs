<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Portfolio Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Nunito', sans-serif;
      background-color: #f8f9fc;
    }
    .card {
      border: none;
      border-radius: 1rem;
    }
    .dashboard-title {
      font-weight: 700;
      color: #4e73df;
    }
    .stat-title {
      font-size: 0.9rem;
      font-weight: 600;
      text-transform: uppercase;
    }
    .stat-value {
      font-size: 1.5rem;
      font-weight: bold;
    }
    .icon {
      font-size: 2rem;
      color: #dddfeb;
    }
    .sidebar {
      width: 250px;
      background-color: #4e73df;
      min-height: 100vh;
      color: white;
      padding: 1rem;
      position: fixed;
    }
    .sidebar a {
      color: white;
      text-decoration: none;
      display: block;
      margin: 1rem 0;
    }
    .header {
      background-color: white;
      padding: 1rem 2rem;
      border-bottom: 1px solid #e3e6f0;
      margin-left: 250px;
    }
    .main-content {
      margin-left: 250px;
      padding: 2rem;
    }
  </style>
</head>

<body>
  <!-- <div class="sidebar">
    <h4 class="text-white">My Portfolio</h4>
    <a href="#"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
    <a href="#"><i class="fas fa-folder"></i> Projects</a>
    <a href="#"><i class="fas fa-user"></i> About Me</a>
    <a href="#"><i class="fas fa-envelope"></i> Contact</a>
  </div> -->
   <%- include('./layouts/sidebar')%>

  <div class="header">
      <%- include('./layouts/navbar')%>
  </div>

  <div class="main-content">
    <h1 class="dashboard-title mb-4">Product Management Dashboard</h1>

    <div class="row g-4">
      <div class="col-md-3">
        <div class="card shadow p-3">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <div class="stat-title text-primary">Category</div>
              <div class="stat-value text-dark">3</div>
            </div>
            <i class="fas fa-folder icon"></i>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card shadow p-3">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <div class="stat-title text-success">Products</div>
              <div class="stat-value text-dark">5</div>
            </div>
            <i class="fas fa-user-friends icon"></i>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card shadow p-3">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <div class="stat-title text-info">Customer</div>
              <div class="stat-value text-dark">15</div>
            </div>
            <i class="fas fa-code icon"></i>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card shadow p-3">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <div class="stat-title text-warning"></div>
              <div class="stat-value text-dark"></div>
            </div>
            <i class="fas fa-tasks icon"></i>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-lg-8">
        <div class="card shadow p-4">
          <h5 class="mb-3">Project Timeline</h5>
          <canvas id="areaChart"></canvas>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card shadow p-4">
          <h5 class="mb-3">Project Distribution</h5>
          <canvas id="pieChart"></canvas>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const areaCtx = document.getElementById('areaChart').getContext('2d');
    new Chart(areaCtx, {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
        datasets: [{
          label: 'Projects Completed',
          data: [1, 3, 2, 5, 4, 6],
          borderColor: '#4e73df',
          backgroundColor: 'rgba(78, 115, 223, 0.1)',
          tension: 0.4
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });

    const pieCtx = document.getElementById('pieChart').getContext('2d');
    new Chart(pieCtx, {
      type: 'pie',
      data: {
        labels: ['Frontend', 'Backend', 'Fullstack'],
        datasets: [{
          data: [40, 30, 30],
          backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc']
        }]
      },
      options: {
        responsive: true
      }
    });
  </script>
   <%- include('./layouts/footer')%>
</body>
</html>